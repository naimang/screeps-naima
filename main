// HARVESTER's logic (main.js linked to harvester.js)
var harvester = require('harvester');
for(var i in Game.creeps) {
    var creep = Game.creeps[i];
    if(creep.memory.role == 'harvester') {
        harvester(creep);
    }
}
// what is need is just SPAWNING creeps through CONSOLE and MEMORY
