// BUILDER's logic (main.js linked to builder.js)
var builder = require('builder');

for(var i in Game.creeps) {
	var creep = Game.creeps[i];

	if(creep.memory.role == 'builder') {
		builder(creep);
	}
}
// what is need is just SPAWNING creeps through CONSOLE and MEMORY
//..............................................................................
//..............................................................................

// GUARD's logic (main.js linked to builder.js)
var guard = require('guard');

for(var a in Game.creeps) {
	var creep = Game.creeps[a];

	if(creep.memory.role == 'guard') {
		guard(creep);
	}
}

// what is need is just SPAWNING creeps through CONSOLE and MEMORY
